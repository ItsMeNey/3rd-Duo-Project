@inherits UmbracoViewPage<BlockListItem>

@{
    var row = (FeaturedBlock)Model.Content;
    var settings = (GeneralSettings)Model.Settings;
    if(settings?.Hide?? false) { return; }
    if (row.FeaturedItems == null || !row.FeaturedItems.Any()) return;
}


<div class="container">
    <div class="row gap-2 p-2">
        @foreach(var item in row.FeaturedItems)
        {
            var rowItem = (FeaturedItem)item.Content;
            var rowSettings = (GeneralSettings)item.Settings;
            if (rowSettings?.Hide ?? false) continue;

            <div class="col-12-xs col-6-md col-4-xl">
                <div class="card-white b-rad-sm p-2">
                @if(rowItem.Image != null)
                {
                    <img class="b-rad-sm tour-img" src="@rowItem.Image.Url()" />
                }
                    <p class="card__title text-primary fw-lg">@rowItem.Title</p>
                    <p class="card__body text-tertiary">
                       @rowItem.Subtitle
                    </p>
                    <button class="btn-outlined-primary text-primary text-hover-white font-sm fw-xl leading-2 border-1-solid-tertiary">
                        Learn More
                    </button>
                </div>
            </div>
        }
    </div>
</div>
